<hr>

<h2>Sign up to create a new hero!</h2>
<form class="create-form center signup">
  <div class="form-group input-field">
    <label class="white-text" for="user">Name</label>
    <input type="text" id="user-input" name="name">
  </div>
  <div class="form-group input-field">
    <label class="white-text" for="createPassword">Password</label>
    <input type="password" id="password-input" password="password">
  </div>


</form>
<button class="btn btn-large waves-effect waves-light grey darken-3 white-text" id='submit'>Submit</button>
<!-- Switch -->
<div class="container">
  <div class="switch">
    <label class='white-text'>
      Login
      <input id='isNewUser' type="checkbox">
      <span class="lever"></span>
      Sign Up
    </label>
    <h3 id="msg"></h3>
  </div>
</div>
<!-- Custom Script -->
<script src="/js/app.js" type="text/javascript"></script>
